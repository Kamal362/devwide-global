<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <section class="projects">
    <div class="container">
      <h2>My Projects</h2>
      <div class="swiper-container">
        <div class="swiper-wrapper">
          <% projects.forEach((project, index) => { %>
            <div class="swiper-slide">
              <div class="project-card">
                <h3><%= project.name %></h3>
                <p><%= project.description %></p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#projectModal<%= index %>">
                  View Details
                </button>
              </div>
            </div>
          <% }) %>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
        <!-- Add Navigation -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </div>
  </section>
  
  <!-- Project Modals -->
  <% projects.forEach((project, index) => { %>
    <div class="modal fade" id="projectModal<%= index %>" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title"><%= project.name %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <p><%= project.description %></p>
            <a href="<%= project.link %>" class="btn btn-primary">Visit Project</a>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
  
  <!-- Initialize Swiper -->
  <script>
    const swiper = new Swiper('.swiper-container', {
      slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        768: {
          slidesPerView: 2,
        },
        992: {
          slidesPerView: 3,
        },
      },
    });
  </script>
  
  <%- include('partials/footer') %>
</body>
</html>